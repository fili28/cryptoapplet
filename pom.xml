<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>es.uji.security</groupId>
  <version>3.0.0-SNAPSHOT</version>
  <artifactId>CryptoApplet</artifactId>
  <packaging>pom</packaging>
  <name>CryptoApplet</name>
  <url>http://universitatjaumei.jira.com/browse/CRYPTOAPPLET/</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <bouncycastle.version>1.43</bouncycastle.version>
    <jxades.version>0.0.3</jxades.version>
    <junit.version>4.8.1</junit.version>
  </properties>

  <organization>
    <name>Universitat Jaume I</name>
    <url>http://www.uji.es/</url>
  </organization>

  <repositories>
    <repository>
      <id>uji</id>
      <url>http://devel.uji.es/nexus/content/groups/public/</url>
    </repository>
  </repositories>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>uji-config</module>
    <module>uji-utils</module>
    <module>uji-crypto-core</module>
    <module>uji-crypto-raw</module>
    <module>uji-crypto-cms</module>
    <module>uji-crypto-xmldsign</module>
    <module>uji-crypto-openxades</module>
    <module>uji-crypto-jxades</module>
    <module>uji-crypto-mityc</module>
    <module>uji-format-pdf</module>
    <module>uji-format-odf</module>
    <module>uji-format-facturae</module>
    <module>uji-keystore</module>
    <module>uji-ui-applet</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>es.uji.security</groupId>
        <artifactId>uji-utils</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>es.uji.security</groupId>
        <artifactId>uji-crypto</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>es.uji.security</groupId>
        <artifactId>uji-ui-applet</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <issueManagement>
    <system>CryptoApplet Issue Tracking</system>
    <url>http://universitatjaumei.jira.com/browse/CRYPTOAPPLET</url>
  </issueManagement>

  <mailingLists>
    <mailingList>
      <name>CryptoApplet</name>
      <subscribe>http://proyectostic.uji.es/</subscribe>
      <unsubscribe> http://proyectostic.uji.es/</unsubscribe>
      <post>cryptoapplet AT llistes.uji.es</post>
      <archive>http://proyectostic.uji.es/</archive>
    </mailingList>
  </mailingLists>

  <developers>
    <developer>
      <name>Paul Santapau</name>
      <email>santapau AT uji.es</email>
      <roles>
        <role>commiter</role>
      </roles>
    </developer>
    <developer>
      <name>Ricardo Borillo</name>
      <email>borillo AT uji.es</email>
      <roles>
        <role>commiter</role>
      </roles>
    </developer>
  </developers>

  <scm>
    <connection>scm:svn:http://universitatjaumei.jira.com/svn/CRYPTOAPPLET/</connection>
    <developerConnection>scm:svn:http://universitatjaumei.jira.com/svn/CRYPTOAPPLET/</developerConnection>
    <url>http://universitatjaumei.jira.com/svn/CRYPTOAPPLET/</url>
  </scm>

  <profiles>
    <profile>
      <id>default</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <uji.keytool.keystore>../uji.keystore</uji.keytool.keystore>
        <uji.keytool.alias>uji</uji.keytool.alias>
        <uji.keytool.password>cryptoapplet</uji.keytool.password>
      </properties>
    </profile>
  </profiles>

</project>
